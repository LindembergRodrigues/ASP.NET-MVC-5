@using CasaDoCodigoMVC.Data
@model CasaDoCodigoMVC.Models.Fabricante

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Fabricante</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @{
                        EFContext context = new EFContext();
                        long id = 0;
                        if (context.Fabricante.Count() != 0)
                        {
                            id = context.Fabricante.Max(c => c.FabricanteId) + 1;
                        }
                    }
                    <label asp-for="FabricanteId" class="control-label">Identificador</label>
                    <input asp-for="FabricanteId" class="form-control" disabled="" placeholder=@id/>
                    <span asp-validation-for="FabricanteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @*<div>
    <a asp-action="Index">Menu</a>
    </div>*@

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
    </html>
